{
  "extends": ["plugin:@nrwl/nx/react-typescript", "../../.eslintrc.json", "next", "next/core-web-vitals", "plugin:cypress/recommended"],
  "ignorePatterns": ["!**/*", "**/.dist"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@next/next/no-html-link-for-pages": ["error", "apps/migrator/pages"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.tsx"],
      "rules": {
        "react/display-name": "off",
        "react/no-children-prop": "off"
      }
    }
  ],
  "env": {
    "jest": true
  }
}
